<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context=".mypage.MypageFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/mypageCv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="573dp">

            <ImageButton
                android:id="@+id/button_x"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="64dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/x" />

            <TextView
                android:id="@+id/textview_quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="136dp"
                android:layout_marginTop="64dp"
                android:layout_weight="1"
                android:fontFamily="@font/pre_semibold"
                android:text="회원탈퇴"
                android:textColor="@color/black1"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/button_x"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mypage_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pre_m"
                android:text="탈퇴하시면,\n\n 저장된 기록과 책이 모두 사라집니다.
                \n계정을 다시 살리거나 데이터를 복구할 수 없습니다.\n 본 계정으로 다시는 로그인 할 수 없습니다."
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="230dp" />

            <TextView
                android:id="@+id/mypage_main2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pre_m"
                android:text="정말 탈퇴하시겠습니까?"
                android:textColor="@color/color8"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="388dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:backgroundTint="@color/color1"
        android:fontFamily="@font/pre_m"
        android:insetTop="0dp"
        android:text="탈퇴하기"
        android:textColor="@color/black1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypageCv3" />

</androidx.constraintlayout.widget.ConstraintLayout>