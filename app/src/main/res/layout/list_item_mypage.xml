<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="0dp"
    android:gravity="center_vertical"
    android:background="@drawable/list_item_mypage_bg">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:background="#EFEBE5"
        android:fontFamily="@font/pre_m"
        android:text="Title"
        android:textColor="#A1816E"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pre_m"
        android:text="Sub"
        android:textColor="@color/color8"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_tv" />

    <TextView
        android:id="@+id/sub_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pre_m"
        android:text="ê¶Œ"
        android:textColor="#654D47"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/num_tv"
        app:layout_constraintTop_toBottomOf="@id/title_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>



