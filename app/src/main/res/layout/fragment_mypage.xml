<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.MypageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibimypagelity="visible"
        tools:context=".MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color1"
                android:visibimypagelity="visible"
                tools:context=".MainActivity">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="#ffffff">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="30dp"
                        android:visibimypagelity="visible"
                        tools:context=".MainActivity">

                        <ImageButton
                            android:id="@+id/mypage_imagebtn_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="188dp"
                            android:backgroundTint="#FFFFFF"
                            android:src="@drawable/pen_min"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:layout_editor_absoluteY="155dp" />

                        <ImageView
                            android:id="@+id/mypage_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="27dp"
                            android:layout_marginTop="34dp"
                            android:src="@drawable/mypage_profill"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mypage_text" />

                        <TextView
                            android:id="@+id/mypage_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="27dp"
                            android:layout_marginTop="63dp"
                            android:fontFamily="@font/font_write"
                            android:text="내 정보"
                            android:textSize="40sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/mypage_text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="47dp"
                            android:text="북토리"
                            android:fontFamily="@font/pre_m"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@+id/mypage_text"
                            tools:layout_editor_absoluteX="115dp" />

                        <TextView
                            android:id="@+id/mypage_text_n"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="160dp"
                            android:fontFamily="@font/pre_m"
                            android:text="님"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toStartOf="@+id/mypage_imagebtn_1"
                            app:layout_constraintStart_toEndOf="@+id/mypage_text_name"
                            app:layout_constraintTop_toTopOf="parent" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            app:layoutManager="StaggeredGridLayoutManager"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mypage_image"
                            app:spanCount="2"
                            tools:listitem="@layout/item_list" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/materialCardView"
                    app:strokeColor="#ffffff">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibimypagelity="visible"
                        android:layout_marginTop="30dp"
                        tools:context=".MainActivity">

                        <Button
                            android:id="@+id/mypage_btn_1"
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:backgroundTint="#FFFFFF"
                            android:gravity="center_vertical"
                            android:text="연결된 계정"
                            android:fontFamily="@font/pre_r"
                            android:textColor="#565656"
                            app:layout_constraintStart_toStartOf="parent" />

                        <Button
                            android:id="@+id/mypage_btn_2"
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:backgroundTint="#FFFFFF"
                            android:gravity="center_vertical"
                            android:text="알림 설정"
                            android:fontFamily="@font/pre_r"
                            android:textColor="#565656"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mypage_btn_1" />

                        <Button
                            android:id="@+id/mypage_btn_3"
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:layout_marginTop="0dp"
                            android:backgroundTint="#FFFFFF"
                            android:gravity="center_vertical"
                            android:text="공지사항"
                            android:fontFamily="@font/pre_r"
                            android:textColor="#565656"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mypage_btn_2" />

                        <Button
                            android:id="@+id/mypage_btn_4"
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:layout_marginTop="0dp"
                            android:backgroundTint="#FFFFFF"
                            android:gravity="center_vertical"
                            android:text="고객센터"
                            android:fontFamily="@font/pre_r"
                            android:textColor="#565656"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mypage_btn_3" />

                        <Button
                            android:id="@+id/mypage_btn_5"
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:layout_marginTop="0dp"
                            android:backgroundTint="#FFFFFF"
                            android:gravity="center_vertical"
                            android:text="이용약관"
                            android:fontFamily="@font/pre_r"
                            android:textColor="#565656"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mypage_btn_4" />

                        <Button
                            android:id="@+id/mypage_btn_logout"
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="28dp"
                            android:backgroundTint="#FFFFFF"
                            android:gravity="center_vertical"
                            android:text="로그아웃"
                            android:fontFamily="@font/pre_r"
                            android:textColor="#B86870"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mypage_btn_5" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>